<link rel="stylesheet" href="/stylesheets/add.css">

<div class="container contact-form">
    <div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
    </div>
    <form class="flexer" method="post" action="/admin/news/edit">
        <h3>Edit News</h3>
        <input type="hidden" value="{{news.id}}" name="id">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <textarea  name="title" class="form-control"
                        style="width: 100%; height: 125px;">{{news.title}}</textarea>
                </div>
                <div class="">
                    <div class="form-group">
                        <textarea name="subtitle" class="form-control"
                            style="width: 100%; height: 175px;">{{news.subtitle}}</textarea>
                    </div>
                </div>

            </div>
            <div class="col-6">
                <div class="form-group">
                    <textarea name="modalBody" class="form-control"
                        style="width: 100%; height: 300px;">{{news.modalBody}}</textarea>
                </div>
            </div>
        </div>
        <div class="py-4">
            <div class="form-group grid-center ">
                <input type="submit" name="btnSubmit" class="btnContact btn btn-danger" value="Submit" />
            </div>
        </div>

        <div>
            <div class="form-group">
                <p><label> Image: <input type="file" name="image" id="image"></label>
                </p>
                <p>
                    <label> <input type="checkbox" name="img_delete" id="img_delete" value="1">Delete current image?</label>
                    <input type="hidden" name="img_original" value="{{news1.img_id}}">
                </p>
                
            </div>
        </div>
        {{#if error}}
        <h5>{{message}}</h5>
        {{/if}}
    </form>
</div>