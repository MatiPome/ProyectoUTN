<link rel="stylesheet" href="/stylesheets/add.css">

<div class="container contact-form">
    <div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
    </div>
    <form class="flexer" method="post" action="/admin/news/add" enctype="multipart/form-data">
        <h3>Add News</h3>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <textarea name="title" class="form-control" placeholder="Title"
                        style="width: 100%; height: 125px;"></textarea>
                </div>
                <div class="">
                    <div class="form-group">
                        <textarea name="subtitle" class="form-control" placeholder="Subtitle"
                            style="width: 100%; height: 175px;"></textarea>
                    </div>
                </div>

            </div>
            <div class="col-6">
                <div class="form-group">
                    <textarea name="modalBody" class="form-control" placeholder="News"
                        style="width: 100%; height: 300px;"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label>Image: <input type="file" name="image" id="image"></label>
            </div>

        </div>
        <div class="py-4">
            <div class="form-group">
                <button type="submit" class="btnContact btn btn-danger">Submit</button>
            </div>
        </div>
        {{#if error}}
        <h5>{{message}}</h5>
        {{/if}}
    </form>
</div>